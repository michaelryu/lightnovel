<% @unovel.each do |novel| %>
<li>
	<div class="novel-card">
		<div class="card-pic">
		<%= link_to image_tag(novel.picture.url), novel %>
		</div>
		<div class="card-info">
		<%= link_to novel.title, novel %>
		<p><%= truncate_html novel.summary, length: 220 %>
			<% if novel.summary.length > 220 %>
  		<%= link_to "Read More Â»", novel %></p>
		<% end %>
		<% if novel.chapters.any? %>
		<h3><%= link_to "#{novel.chapters.first.title}", [novel, novel.chapters.first] %></h3>	
	<% end %>
		</div>
	</div>
</li>
<% end %>