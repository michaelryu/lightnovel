<div class="user-show">
<h2>Latest Updates</h2>
<% if @updates.any? %>
	<ul>
		<% @updates.each do |update| %>
		<li>
		  <div class="novel-card">
		  <div class="update-pic">
		    <div class="card-pic">
		    <%= link_to image_tag(update.picture.url), update %>
		    </div>

		    <div class="card-info">
		    <% if update.chapters.any? %>
		      <%= link_to "#{update.title}: #{update.chapters.first.title}", [update, update.chapters.first] %>
		      <p><%= truncate_html update.chapters.first.content, length: 400 %>
		      <% if update.chapters.first.content.length > 400 %>
		      <%= link_to "Read More Â»", [update, update.chapters.first] %></p>
		    <% end %>
		    <% else %>
		      <%= link_to update.title, update %>
		      <p>No chapters</p>
		    <% end %>
		    </div>
		    </div>
		  </div>
		</li> 
		<% end %>
	</ul>
	<div class="paginate"><%= will_paginate @updates, previous_label: "<", next_label: ">" %></div>
<% end %>
</div>
